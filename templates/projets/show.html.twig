{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <h1>Projets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ projet.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ projet.dateCreation ? projet.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modification</th>
                <td>{{ projet.dateModification ? projet.dateModification|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="link_admin" href="{{ path('app_projets_index') }}">back to list</a>

    {% if is_granted("EDIT",projet) %}
        <a class="link_admin" href="{{ path('app_projets_edit', {'id': projet.id}) }}">edit</a>
    {% endif %}
    {% if is_granted("DELETE",projet) %}
        {{ include('projets/_delete_form.html.twig') }}
    {% endif %}


{% endblock %}
