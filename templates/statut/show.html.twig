{% extends 'base.html.twig' %}

{% block title %}Statut{% endblock %}

{% block body %}
    <h1>Statut</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statut.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ statut.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <a class="link_admin" href="{{ path('app_statut_index') }}">back to list</a>

    {% if is_granted("EDIT",statut) %}
        <a class="link_admin" href="{{ path('app_statut_edit', {'id': statut.id}) }}">edit</a>
    {% endif %}
    {% if is_granted("DELETE",statut) %}
        {{ include('statut/_delete_form.html.twig') }}
    {% endif %}


{% endblock %}
