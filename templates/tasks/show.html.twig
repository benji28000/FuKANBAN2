{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h1>Tasks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ task.dateCreation ? task.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_modification</th>
                <td>{{ task.dateModification ? task.dateModification|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tasks_index') }}">back to list</a>
    {% if is_granted("TASK_EDIT",task) %}
    <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>
    {% endif %}
    {% if is_granted("TASK_DELETE",task) %}

    {{ include('tasks/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
