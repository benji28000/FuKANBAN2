{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ utilisateur.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ utilisateur.mail }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ utilisateur.getRoles()[0] }}</td>
            </tr>
        </tbody>
    </table>

    <a class="link_admin" href="{{ path('app_utilisateurs_index') }}">back to list</a>

    {% if is_granted("EDIT",utilisateur) %}
        <a class="link_admin"  href="{{ path('app_utilisateurs_edit', {'id': utilisateur.id}) }}">edit</a>
    {% endif %}
    {% if is_granted("DELETE",utilisateur) %}


        {{ include('utilisateurs/_delete_form.html.twig') }}
    {% endif %}


{% endblock %}
